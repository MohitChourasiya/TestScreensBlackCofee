<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".MerchantFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="2"
        android:layout_marginTop="5dp">
        <RelativeLayout
            android:id="@+id/search_rel"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_marginStart="14dp"
            android:layout_marginEnd="30dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/forgotbtn_round">


            <EditText
                android:id="@+id/search_txt"
                android:layout_width="323dp"
                android:layout_height="30dp"
                android:layout_marginEnd="43dp"
                android:layout_toRightOf="@+id/img_search"
                android:textSize="14dp"
                android:background="@null"
                android:hint="Jenny"
                android:textColorHint="#000000" />

            <ImageView
                android:id="@+id/img_search"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_centerVertical="true"
                android:layout_marginStart="13dp"
                android:layout_marginEnd="13dp"
                android:src="@drawable/magnifying" />
        </RelativeLayout>



        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_toRightOf="@id/search_rel"
            android:background="@drawable/filter"
            android:id="@+id/filterIcon"
            android:layout_marginEnd="80dp"
            android:layout_marginTop="3dp"/>

    </LinearLayout>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">


    <androidx.cardview.widget.CardView
        android:id="@+id/profilePic"
        android:layout_width="80dp"
        android:layout_height="90dp"
        app:cardCornerRadius="20dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="40dp"
        app:cardBackgroundColor="@color/black"
        app:cardElevation="5dp">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/arrow"
            android:scaleType="fitXY"/>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        app:cardCornerRadius="25dp"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="10dp"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">




            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Om Garden"
                android:layout_marginStart="90dp"
                android:textColor="@color/netcalf"
                android:layout_marginTop="40dp"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_marginEnd="15dp"/>






            <ProgressBar
                android:id="@+id/progressBar"
                android:layout_width="match_parent"
                android:layout_marginStart="90dp"
                android:layout_marginEnd="140dp"
                android:layout_marginTop="5dp"
                android:layout_height="wrap_content"
                style="?android:attr/progressBarStyleHorizontal"
                android:progressDrawable="@drawable/custom_progress_bg"/>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="90dp"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="10dp"

                android:orientation="horizontal">
                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/group"

                    android:layout_marginTop="2dp"
                    android:textSize="14sp"
                    android:layout_marginEnd="15dp"/>
                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/suitcase"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="2dp"
                    android:textSize="14sp"
                    android:layout_marginEnd="15dp"/>
                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/merchant"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="2dp"
                    android:textSize="14sp"
                    android:layout_marginEnd="15dp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="20dp"
                android:layout_marginStart="30dp"
                android:layout_gravity="bottom"

                >


                <TextView
                    android:id="@+id/firstChoice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Wedding Planner!"
                    android:textColor="@color/netcalf"
                    android:layout_marginTop="5dp"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:layout_marginEnd="5dp"/>





            </LinearLayout>


            <TextView
                android:id="@+id/StatusTxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hii community iam open to new connections"
                android:textColor="@color/netcalf"
                android:layout_marginTop="5dp"
                android:textSize="13sp"
                android:layout_marginBottom="15dp"
                android:layout_marginStart="30dp"
                android:layout_marginEnd="25dp"/>

        </LinearLayout>







    </androidx.cardview.widget.CardView>

    </RelativeLayout>

</LinearLayout>