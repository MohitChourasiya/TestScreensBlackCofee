<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="3dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:id="@+id/profilePic"
        android:layout_width="80dp"
        android:layout_height="90dp"
        app:cardCornerRadius="20dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="40dp"
        app:cardBackgroundColor="@color/black"


        app:cardElevation="5dp">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/arrow"
            android:scaleType="fitXY"/>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        app:cardCornerRadius="25dp"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="10dp"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="+ INVITE"
                android:textColor="@color/netcalf"
                android:layout_gravity="end"
                android:layout_marginTop="18dp"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_marginEnd="15dp"/>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="David bekham"
                android:layout_marginStart="90dp"
                android:textColor="@color/netcalf"
                android:layout_marginTop="8dp"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_marginEnd="15dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Indore"
                android:textColor="@color/netcalf"
                android:layout_marginStart="90dp"
                android:layout_marginTop="2dp"
                android:textSize="14sp"
                android:layout_marginEnd="15dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Within 300-400m"
                android:textColor="@color/netcalf"
                android:layout_marginTop="3dp"
                android:layout_marginStart="90dp"
                android:textSize="13sp"
                android:textStyle="bold"
                android:layout_marginEnd="15dp"/>



            <ProgressBar
                android:id="@+id/progressBar"
                android:layout_width="match_parent"
                android:layout_marginStart="90dp"
                android:layout_marginEnd="120dp"
                android:layout_marginTop="5dp"
                android:layout_height="wrap_content"
                style="?android:attr/progressBarStyleHorizontal"
                android:progressDrawable="@drawable/custom_progress_bg"/>



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="20dp"
                android:layout_marginStart="30dp"
                android:layout_gravity="bottom"

                >


                <TextView
                    android:id="@+id/firstChoice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Coffee"
                    android:textColor="@color/netcalf"
                    android:layout_marginTop="5dp"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:layout_marginEnd="5dp"/>
                <TextView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="|"
                    android:textColor="@color/netcalf"
                    android:layout_marginTop="5dp"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:layout_marginEnd="5dp"/>
                <TextView
                    android:id="@+id/secondChoice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Coffee"
                    android:textColor="@color/netcalf"
                    android:layout_marginTop="5dp"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:layout_marginEnd="5dp"/>

                <TextView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="|"
                    android:textColor="@color/netcalf"
                    android:layout_marginTop="5dp"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:layout_marginEnd="5dp"
                    />
                <TextView
                    android:id="@+id/thirdChoice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Coffee"
                    android:textColor="@color/netcalf"
                    android:layout_marginTop="5dp"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:layout_marginEnd="15dp"/>





            </LinearLayout>


            <TextView
                android:id="@+id/StatusTxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hii community iam open to new connections"
                android:textColor="@color/netcalf"
                android:layout_marginTop="5dp"
                android:textSize="13sp"
                android:layout_marginBottom="15dp"
                android:layout_marginStart="30dp"
                android:layout_marginEnd="25dp"/>

        </LinearLayout>







    </androidx.cardview.widget.CardView>

</RelativeLayout>